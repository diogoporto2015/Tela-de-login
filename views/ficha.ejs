        <div class="container-fluid border border-1 border-drak mb-5 p-4 bg-white shadow">
            
            <div class="row">

                <div class="my-3 col-5">
                    <label class="form-label">Nome:</label>
                    <input id="nome" class="form-control" type="text" name="nome" required>
                </div>

                <div class="my-3 col">
                    <label id="div2" class="form-label">CPF:</label>
                    <input id="cpf" class="form-control" type="text" name="cpf" placeholder="000.000.000-00">
                </div>

                <div class="my-3 col">
                    <label class="form-label">RG:</label>
                    <input id="rg" class="form-control" type="text" name="rg" placeholder="000.000.00-0">
