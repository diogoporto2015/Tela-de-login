                    <label for="feminino" class="ms-2"><h6>Feminino</h6></label> <br>
                    <input type="radio" id="masculino" name="sexo" id="masculino" value="MASCULINO">
                    <label for="masculino" class="ms-2"><h6>Masculino</h6></label>
                </div>

                <div class="my-3 col-2" col>
                    <label for="peso" class="form-label">Peso:</label>
                    <input id="peso" class="form-control" type="text" name="peso" placeholder="000 Kg">
                </div>

                <div class="my-3 col-2 ms-5">
                    <label class="form-label">Altura:</label>
                    <input id="altura" class="form-control" type="text" name="altura" placeholder="0.00 Cm">
                </div>

            </div>

        </div>

        <div class=" container-fluid border mb-5 p-4 bg-white shadow">

            <div class="row">

                <div class="my-3 col-5">
                    <label class="form-label">Endereço:</label>
