    <form class="container-sm pt-3 p-5 border bg-white shadow w-75" id="cadastroForm" action="/cadastrar" method="POST">

        <div class="my-3 text-start">
            <button type="reset" class="btn btn-primary ms-5">Limpar dados</button>
            
            <button type="submit" id="//cadastrar" class="btn btn-primary ms-5" data-bs-toggle="modal" data-bs-target="#JanelaModalCadastro">Cadastrar</button>

            <div id="JanelaModalCadastro" name="JanelaModalCadastro" class="modal fade " data-bs-backdrop="static">

                <div class="modal-dialog modal-lg modal-dialog-centered ">

                    <div class="modal-content">
 
                        <div class="modal-header align-self-center">
                            <h2 class="modal-title">Cadastro da Ficha do Paciente</h2>
                        </div>

                        <div class="modal-body">
                            <p><h3 class="text-center">PARABÉNS</h3></p>
                            <p class="text-center">Cadastro realizado com sucesso!</p>
                            <p class="text-center">Para imprimir a ficha do paciente clique em imprimir.</p>
                        </div>

                        <div class="modal-footer ">
                            <button type="button" class="btn btn-primary" >Imprimir</button>
                            <button type="button" class="btn btn-danger" data-bs-toggle="modal">Fechar</button>
                        </div>
                    </div>
                </div>
            </div>

            <button type="button" id="atualizar" class="btn btn-primary ms-5" data-bs-toggle="modal" data-bs-target="#JanelaModalAtualizar">Atualizar</button>

            <div id="JanelaModalAtualizar" class="modal fade " data-bs-backdrop="static">

                <div class="modal-dialog modal-lg modal-dialog-centered ">

                    <div class="modal-content">
 
                        <div class="modal-header align-self-center">
